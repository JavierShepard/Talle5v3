<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#4488CC"
                android:endColor="#336699"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#336699" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#5599DD"
                android:endColor="#4488CC"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#336699" />
        </shape>
    </item>
</selector>